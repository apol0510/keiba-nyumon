---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = '競馬初心者のための入門ガイド。競馬の始め方、馬券の買い方、用語解説、南関競馬、データ予想の基礎知識をわかりやすく解説します。',
  ogImage = '/og/default.png',
} = Astro.props;

const siteTitle = '競馬入門ガイド';
const fullTitle = title === 'トップ' ? siteTitle : `${title} | ${siteTitle}`;
const siteUrl = import.meta.env.SITE_URL || 'https://keiba-nyumon.jp';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
const ogImageUrl = ogImage.startsWith('http') ? ogImage : `${siteUrl}${ogImage}`;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Google Search Console Verification -->
    <meta name="google-site-verification" content="LJ1qNn3SZFuo5zHjLtI58OZSKKXXeVugmiXG2SPGMe8" />

    <!-- OGP -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:locale" content="ja_JP" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4">
        <!-- Top bar -->
        <div class="flex items-center justify-between h-14 md:h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-2 md:gap-3">
            <div class="w-8 h-8 md:w-10 md:h-10 bg-gradient-to-br from-sky-400 to-blue-500 rounded flex items-center justify-center shadow-lg shadow-sky-500/30">
              <svg class="w-5 h-5 md:w-6 md:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <div>
              <div class="text-base md:text-xl font-bold text-gray-900">
                競馬入門ガイド
              </div>
              <div class="hidden sm:block text-xs text-gray-500">
                初心者のための基礎知識
              </div>
            </div>
          </a>

          <!-- Desktop Navigation -->
          <nav class="hidden md:flex items-center gap-6">
            <a href="/" class="text-sm font-medium text-gray-700 hover:text-sky-500 transition-colors">
              トップ
            </a>
            <a href="/" class="text-sm font-medium text-gray-700 hover:text-sky-500 transition-colors">
              記事一覧
            </a>
            <a href="/about/" class="text-sm font-medium text-gray-700 hover:text-sky-500 transition-colors">
              サイトについて
            </a>
            <a href="/contact/" class="text-sm font-medium text-gray-700 hover:text-sky-500 transition-colors">
              お問い合わせ
            </a>
          </nav>

          <!-- Mobile menu button -->
          <button
            type="button"
            class="md:hidden p-2 text-gray-600 hover:bg-gray-100 rounded-md"
            id="mobile-menu-button"
            aria-label="メニュー"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile menu -->
        <nav class="hidden md:hidden pb-3 border-t border-gray-200" id="mobile-menu">
          <div class="flex flex-col pt-3">
            <a href="/" class="px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 rounded">
              トップ
            </a>
            <a href="/" class="px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 rounded">
              記事一覧
            </a>
            <a href="/about/" class="px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 rounded">
              サイトについて
            </a>
            <a href="/contact/" class="px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 rounded">
              お問い合わせ
            </a>
          </div>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 text-gray-300 mt-auto">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <div>
            <h3 class="text-white font-bold text-lg mb-4">競馬入門ガイド</h3>
            <p class="text-sm text-gray-400 leading-relaxed">
              競馬初心者のための入門サイト。
              競馬の始め方、馬券の買い方、用語解説、南関競馬、データ予想の基礎知識を
              わかりやすく解説します。
            </p>
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-4">カテゴリ</h3>
            <ul class="space-y-2 text-sm">
              <li>📚 競馬の基礎知識</li>
              <li>🎫 馬券の買い方</li>
              <li>📖 競馬用語集</li>
              <li>🏇 南関競馬入門</li>
              <li>📊 データ予想入門</li>
            </ul>
          </div>
          <div>
            <h3 class="text-white font-bold text-lg mb-4">サイト情報</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/about/" class="hover:text-blue-400 transition-colors">当サイトについて</a></li>
              <li><a href="/terms/" class="hover:text-blue-400 transition-colors">利用規約</a></li>
              <li><a href="/privacy/" class="hover:text-blue-400 transition-colors">プライバシーポリシー</a></li>
              <li><a href="/contact/" class="hover:text-blue-400 transition-colors">お問い合わせ</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 pt-8 text-center">
          <p class="text-sm text-gray-400">
            &copy; {new Date().getFullYear()} 競馬入門ガイド. All rights reserved.
          </p>
          <p class="text-xs text-gray-500 mt-2">
            本サイトは競馬初心者向けの基礎知識・入門情報の提供を目的としています。
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
