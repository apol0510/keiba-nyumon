---
import BaseLayout from '../layouts/BaseLayout.astro';
import { config } from '../config';
import { getAllNews } from '../lib/news';

// „Éì„É´„ÉâÊôÇ„Å´ÂÖ®Ë®ò‰∫ã„ÇíÂèñÂæó„Åó„Å¶JSONÂåñ
let allArticles = [];
try {
  allArticles = await getAllNews();
} catch (error) {
  console.warn('Ë®ò‰∫ã„ÅÆÂèñÂæó„Å´Â§±Êïó„Åó„Åæ„Åó„Åü');
}

// „ÇØ„É©„Ç§„Ç¢„É≥„Éà„Çµ„Ç§„Éâ„Åß‰ΩøÁî®„Åô„Çã„Åü„ÇÅ„ÅÆË®ò‰∫ã„Éá„Éº„ÇøÔºàËªΩÈáèÂåñÔºâ
const searchData = allArticles.map(article => ({
  title: article.title,
  slug: article.slug,
  category: article.category,
  excerpt: article.excerpt,
  tags: article.tags || [],
  publishedAt: article.publishedAt.toISOString(),
}));

// ÊßãÈÄ†Âåñ„Éá„Éº„Çø
const siteUrl = config.domain ? `https://${config.domain}` : 'https://keiba-nyumon.jp';
const searchUrl = `${siteUrl}/search/`;

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  url: siteUrl,
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: `${searchUrl}?q={search_term_string}`
    },
    'query-input': 'required name=search_term_string'
  }
};

const breadcrumbStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: '„Éõ„Éº„É†',
      item: `${siteUrl}/`
    },
    {
      '@type': 'ListItem',
      position: 2,
      name: 'Ë®ò‰∫ãÊ§úÁ¥¢',
      item: searchUrl
    }
  ]
};
---

<BaseLayout
  title={`Ë®ò‰∫ãÊ§úÁ¥¢ | ${config.name}`}
  description="Á´∂È¶¨ÂÖ•ÈñÄ„Ç¨„Ç§„Éâ„ÅÆË®ò‰∫ã„ÇíÊ§úÁ¥¢„Åß„Åç„Åæ„Åô„ÄÇ„Ç≠„Éº„ÉØ„Éº„Éâ„ÄÅ„Ç´„ÉÜ„Ç¥„É™„ÄÅ„Çø„Ç∞„ÅßÁµû„ÇäËæº„Çì„Åß„ÄÅ„ÅäÊé¢„Åó„ÅÆÊÉÖÂ†±„ÇíË¶ã„Å§„Åë„Åæ„Åó„Çá„ÅÜ„ÄÇ"
>
  <!-- ÊßãÈÄ†Âåñ„Éá„Éº„Çø: SearchAction -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- ÊßãÈÄ†Âåñ„Éá„Éº„Çø: BreadcrumbList -->
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbStructuredData)} />

  <div class="search-page">
    <!-- „Éë„É≥„Åè„Åö„É™„Çπ„Éà -->
    <nav class="breadcrumb">
      <a href="/">„Éõ„Éº„É†</a>
      <span class="separator">‚Ä∫</span>
      <span class="current">Ë®ò‰∫ãÊ§úÁ¥¢</span>
    </nav>

    <!-- Ê§úÁ¥¢„Éò„ÉÉ„ÉÄ„Éº -->
    <header class="search-header">
      <div class="search-icon">üîç</div>
      <h1 class="search-title">Ë®ò‰∫ãÊ§úÁ¥¢</h1>
      <p class="search-description">
        „Ç≠„Éº„ÉØ„Éº„Éâ„ÇíÂÖ•Âäõ„Åó„Å¶„ÄÅ„ÅäÊé¢„Åó„ÅÆË®ò‰∫ã„ÇíË¶ã„Å§„Åë„Åæ„Åó„Çá„ÅÜ
      </p>
    </header>

    <!-- Ê§úÁ¥¢„Éú„ÉÉ„ÇØ„Çπ -->
    <div class="search-box-container">
      <div class="search-input-wrapper">
        <svg class="search-input-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <input
          type="text"
          id="search-input"
          class="search-input"
          placeholder="‰æã: È¶¨Âà∏„ÅÆË≤∑„ÅÑÊñπ„ÄÅÁ´∂È¶¨Â†¥„ÄÅÂçóÈñ¢Êù±..."
          autocomplete="off"
        />
        <button id="clear-btn" class="clear-btn" style="display: none;" aria-label="„ÇØ„É™„Ç¢">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Ê§úÁ¥¢ÁµêÊûú -->
    <div id="search-stats" class="search-stats" style="display: none;"></div>

    <div id="search-results" class="search-results">
      <!-- ÂàùÊúüÁä∂ÊÖã: „Åô„Åπ„Å¶„ÅÆË®ò‰∫ã„ÇíË°®Á§∫ -->
      <div class="results-grid">
        {allArticles.slice(0, 20).map(article => (
          <a href={`/news/${article.slug}/`} class="result-card">
            <span class="result-category">{article.category}</span>
            <h3 class="result-title">{article.title}</h3>
            <p class="result-excerpt">{article.excerpt}</p>
            <div class="result-meta">
              <time>{new Date(article.publishedAt).toLocaleDateString('ja-JP')}</time>
              {article.tags && article.tags.length > 0 && (
                <div class="result-tags">
                  {article.tags.slice(0, 3).map(tag => (
                    <span class="result-tag">#{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- Ê§úÁ¥¢ÁµêÊûú„Å™„Åó -->
    <div id="no-results" class="no-results" style="display: none;">
      <div class="no-results-icon">üîç</div>
      <p class="no-results-text">Ë©≤ÂΩì„Åô„ÇãË®ò‰∫ã„ÅåË¶ã„Å§„Åã„Çä„Åæ„Åõ„Çì„Åß„Åó„Åü</p>
      <p class="no-results-hint">Âà•„ÅÆ„Ç≠„Éº„ÉØ„Éº„Éâ„ÅßÊ§úÁ¥¢„Åó„Å¶„Åø„Å¶„Åè„Å†„Åï„ÅÑ</p>
    </div>
  </div>
</BaseLayout>

<style>
  .search-page { max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; }
  .breadcrumb { display: flex; align-items: center; gap: 0.5rem; font-size: 0.875rem; color: #6b7280; margin-bottom: 2rem; }
  .breadcrumb a { color: #42a5f5; text-decoration: none; }
  .separator { color: #d1d5db; }
  .current { color: #111827; font-weight: 500; }

  .search-header { text-align: center; margin-bottom: 2rem; padding: 2rem; background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(20px); border-radius: 24px; }
  .search-icon { font-size: 3rem; margin-bottom: 1rem; }
  .search-title { font-size: 2rem; font-weight: 800; color: #111827; margin: 0 0 0.5rem 0; }
  .search-description { font-size: 1rem; color: #6b7280; margin: 0; }

  .search-box-container { margin-bottom: 2rem; }
  .search-input-wrapper { position: relative; max-width: 600px; margin: 0 auto; }
  .search-input-icon { position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); width: 20px; height: 20px; color: #9ca3af; pointer-events: none; }
  .search-input { width: 100%; padding: 1rem 3rem 1rem 3rem; border: 2px solid #e5e7eb; border-radius: 12px; font-size: 1rem; transition: all 0.3s; background: rgba(255, 255, 255, 0.9); }
  .search-input:focus { outline: none; border-color: #42a5f5; box-shadow: 0 0 0 3px rgba(66, 165, 245, 0.1); }
  .clear-btn { position: absolute; right: 1rem; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; padding: 0.5rem; color: #9ca3af; transition: color 0.2s; }
  .clear-btn:hover { color: #111827; }
  .clear-btn svg { width: 20px; height: 20px; }

  .search-stats { text-align: center; margin-bottom: 1.5rem; font-size: 0.875rem; color: #6b7280; }

  .results-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem; }
  .result-card { background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(20px); border: 1px solid rgba(56, 189, 248, 0.2); border-radius: 16px; padding: 1.5rem; text-decoration: none; color: inherit; transition: all 0.3s; display: block; }
  .result-card:hover { border-color: rgba(56, 189, 248, 0.4); box-shadow: 0 8px 32px rgba(56, 189, 248, 0.2); transform: translateY(-4px); }
  .result-category { display: inline-block; padding: 0.25rem 0.75rem; background: #dbeafe; color: #2563eb; font-size: 0.75rem; font-weight: 700; border-radius: 6px; margin-bottom: 0.75rem; }
  .result-title { font-size: 1.125rem; font-weight: 700; color: #111827; margin: 0 0 0.75rem 0; line-height: 1.4; }
  .result-excerpt { font-size: 0.875rem; color: #6b7280; margin: 0 0 1rem 0; line-height: 1.6; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .result-meta { display: flex; justify-content: space-between; align-items: center; font-size: 0.75rem; color: #9ca3af; }
  .result-tags { display: flex; gap: 0.25rem; flex-wrap: wrap; }
  .result-tag { color: #6b7280; }

  .no-results { text-align: center; padding: 4rem 2rem; }
  .no-results-icon { font-size: 4rem; margin-bottom: 1rem; }
  .no-results-text { font-size: 1.25rem; font-weight: 600; color: #111827; margin: 0 0 0.5rem 0; }
  .no-results-hint { font-size: 0.875rem; color: #6b7280; margin: 0; }

  @media (max-width: 768px) {
    .search-header { padding: 1.5rem; }
    .search-title { font-size: 1.5rem; }
    .results-grid { grid-template-columns: 1fr; }
  }
</style>

<script define:vars={{ searchData }}>
  // Fuse.js„ÇíÂãïÁöÑ„Å´„Ç§„É≥„Éù„Éº„Éà
  import('https://cdn.jsdelivr.net/npm/fuse.js@7.0.0/dist/fuse.mjs').then(module => {
    const Fuse = module.default;

    // Fuse.js„ÅÆË®≠ÂÆö
    const fuseOptions = {
      keys: [
        { name: 'title', weight: 0.5 },
        { name: 'excerpt', weight: 0.3 },
        { name: 'category', weight: 0.1 },
        { name: 'tags', weight: 0.1 }
      ],
      threshold: 0.3,
      ignoreLocation: true,
      minMatchCharLength: 2,
    };

    const fuse = new Fuse(searchData, fuseOptions);

    const searchInput = document.getElementById('search-input');
    const clearBtn = document.getElementById('clear-btn');
    const searchStats = document.getElementById('search-stats');
    const searchResults = document.getElementById('search-results');
    const noResults = document.getElementById('no-results');

    // URL„Éë„É©„É°„Éº„Çø„Åã„ÇâÊ§úÁ¥¢„ÇØ„Ç®„É™„ÇíÂèñÂæó
    const urlParams = new URLSearchParams(window.location.search);
    const initialQuery = urlParams.get('q');
    if (initialQuery) {
      searchInput.value = initialQuery;
      performSearch(initialQuery);
      clearBtn.style.display = 'block';
    }

    // Ê§úÁ¥¢ÂÆüË°å
    function performSearch(query) {
      if (!query || query.trim() === '') {
        // Ê§úÁ¥¢„ÇØ„Ç®„É™„ÅåÁ©∫„ÅÆÂ†¥Âêà: ÂÖ®Ë®ò‰∫ã„ÇíË°®Á§∫
        displayAllArticles();
        return;
      }

      const results = fuse.search(query);
      displayResults(results, query);
    }

    // ÂÖ®Ë®ò‰∫ã„ÇíË°®Á§∫
    function displayAllArticles() {
      searchStats.style.display = 'none';
      noResults.style.display = 'none';

      const html = searchData.slice(0, 20).map(article => `
        <a href="/news/${article.slug}/" class="result-card">
          <span class="result-category">${article.category}</span>
          <h3 class="result-title">${article.title}</h3>
          <p class="result-excerpt">${article.excerpt}</p>
          <div class="result-meta">
            <time>${new Date(article.publishedAt).toLocaleDateString('ja-JP')}</time>
            ${article.tags && article.tags.length > 0 ? `
              <div class="result-tags">
                ${article.tags.slice(0, 3).map(tag => `<span class="result-tag">#${tag}</span>`).join('')}
              </div>
            ` : ''}
          </div>
        </a>
      `).join('');

      searchResults.innerHTML = `<div class="results-grid">${html}</div>`;
    }

    // Ê§úÁ¥¢ÁµêÊûú„ÇíË°®Á§∫
    function displayResults(results, query) {
      if (results.length === 0) {
        searchResults.innerHTML = '';
        noResults.style.display = 'block';
        searchStats.style.display = 'none';
        return;
      }

      noResults.style.display = 'none';
      searchStats.style.display = 'block';
      searchStats.textContent = `"${query}" „ÅÆÊ§úÁ¥¢ÁµêÊûú: ${results.length}‰ª∂`;

      const html = results.map(result => {
        const article = result.item;
        return `
          <a href="/news/${article.slug}/" class="result-card">
            <span class="result-category">${article.category}</span>
            <h3 class="result-title">${article.title}</h3>
            <p class="result-excerpt">${article.excerpt}</p>
            <div class="result-meta">
              <time>${new Date(article.publishedAt).toLocaleDateString('ja-JP')}</time>
              ${article.tags && article.tags.length > 0 ? `
                <div class="result-tags">
                  ${article.tags.slice(0, 3).map(tag => `<span class="result-tag">#${tag}</span>`).join('')}
                </div>
              ` : ''}
            </div>
          </a>
        `;
      }).join('');

      searchResults.innerHTML = `<div class="results-grid">${html}</div>`;
    }

    // Ê§úÁ¥¢ÂÖ•Âäõ„Ç§„Éô„É≥„Éà
    let searchTimeout;
    searchInput.addEventListener('input', (e) => {
      const query = e.target.value;

      // „ÇØ„É™„Ç¢„Éú„Çø„É≥„ÅÆË°®Á§∫/ÈùûË°®Á§∫
      clearBtn.style.display = query ? 'block' : 'none';

      // „Éá„Éê„Ç¶„É≥„ÇπÂá¶ÁêÜÔºà300msÔºâ
      clearTimeout(searchTimeout);
      searchTimeout = setTimeout(() => {
        performSearch(query);

        // URL„ÇíÊõ¥Êñ∞ÔºàÂ±•Ê≠¥„Å´„ÅØËøΩÂä†„Åó„Å™„ÅÑÔºâ
        if (query) {
          window.history.replaceState({}, '', `?q=${encodeURIComponent(query)}`);
        } else {
          window.history.replaceState({}, '', '/search/');
        }
      }, 300);
    });

    // „ÇØ„É™„Ç¢„Éú„Çø„É≥
    clearBtn.addEventListener('click', () => {
      searchInput.value = '';
      clearBtn.style.display = 'none';
      displayAllArticles();
      window.history.replaceState({}, '', '/search/');
      searchInput.focus();
    });

    // Enter„Ç≠„Éº„ÅßÊ§úÁ¥¢ÂÆüË°å
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        clearTimeout(searchTimeout);
        performSearch(searchInput.value);
      }
    });
  });
</script>
